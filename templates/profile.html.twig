{% extends 'layout.html.twig' %}
{% block title %}Mon profil | FLOK COIN{% endblock %}
{% block content %}
    <div class="container">
        <div class="formWork">
            <div class="row">
                <div class="col-12 col-md-9 mr-3">
                    <h1 class="text-center">Mon compte</h1>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <img src="{{ asset('/images/user.png') }}" alt="logo" class="mb-3 avatar-250"/>
                <div class="ml-3 mt-2">
                    <p>Nom: {{ app.user.lastname }}</p>
                    <p>Prénom: {{ app.user.firstname }}</p>
                    <p>USERNAME: {{ app.user.username }}</p>
                    <p>Email de connexion: {{ app.user.email }}</p>
                    <p>Téléphone: {{ app.user.telephone }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
