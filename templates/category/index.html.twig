{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Class</th>
                <th>Sp1</th>
                <th>Sp2</th>
                <th>Sp3</th>
                <th>Sp4</th>
                <th>Sp5</th>
                <th>Sp6</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.class }}</td>
                <td>{{ category.sp1 }}</td>
                <td>{{ category.sp2 }}</td>
                <td>{{ category.sp3 }}</td>
                <td>{{ category.sp4 }}</td>
                <td>{{ category.sp5 }}</td>
                <td>{{ category.sp6 }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}